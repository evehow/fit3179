{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Meteorite Landings",
  "projection": {"type": "equalEarth"},
  "params": [
    {
      "name": "year",
      "value": 2000,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2020,
        "step": 1,
        "name": "Select the year:"
      }
    }
  ],
  "layer": [
    {
      "data": {"graticule": true},
      "mark": {"type": "geoshape", "stroke": "#dddddd", "strokeWidth": 0.5}
    },
    {
      "data": {"sphere": true},
      "mark": {"type": "geoshape", "fill": "#a2cffe", "stroke": null}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/evehow/fit3179/main/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/evehow/fit3179/main/meteorite_landings.csv",
        "format": {"type": "csv"}
      },
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "reclong", "type": "quantitative"},
        "latitude": {"field": "reclat", "type": "quantitative"},
        "size": {
          "field": "mass (g)",
          "type": "quantitative",
          "title": "Mass (g)",
          "scale": {"domain": [0, 1000000]}
        },
        "color": {
          "field": "mass (g)",
          "type": "quantitative",
          "scale": {"scheme": "reds"},
          "title": "Mass (g)"
        }
      },
      "transform": [
        {
          "filter": "datum.year == year"  
        }
      ]
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/evehow/fit3179/main/meteorite_landings.csv",
        "format": {"type": "csv"}
      },
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "longitude": {"field": "reclong", "type": "quantitative"},
        "latitude": {"field": "reclat", "type": "quantitative"},
        "text": {"field": "name", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['mass (g)'] > 450000",  
            "value": 1
          },
          "value": 0
        }
      },
      "transform": [
        {
          "filter": "datum.year == year"  
        }
      ]
    }
  ]
}
