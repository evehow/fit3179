{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 400,
  "height": 400,
  "title": {
    "text": "Top 5 Meteorite Classes",
    "color": "#45a29e",
    "fontSize": 24,
    "fontWeight": "bold"
  },
  "data": {
    "values": [
      {"recclass": "L6", "count": 1779},
      {"recclass": "H5", "count": 1543},
      {"recclass": "L5", "count": 1339},
      {"recclass": "H6", "count": 898},
      {"recclass": "H4", "count": 895}
    ]
  },
  "layer": [
    {
      "mark": {
        "type": "arc",
        "innerRadius": 20,
        "stroke": "#fff"
      }
    },
    {
      "mark": {
        "type": "text",
        "radiusOffset": 10,
        "color": "#c5c6c7"
      },
      "encoding": {
        "text": {"field": "recclass", "type": "nominal"}
      }
    }
  ],
  "encoding": {
    "theta": {
      "field": "count",
      "type": "quantitative",
      "stack": true,
      "title": "Number of Meteorites"
    },
    "radius": {
      "field": "count",
      "type": "quantitative",
      "scale": {"type": "sqrt", "zero": true, "rangeMin": 20},
      "title": "Count Radius"
    },
    "color": {
      "field": "recclass",
      "type": "nominal",
      "legend": {"title": "Meteorite Class"},
      "scale": {
        "domain": ["L6", "H5", "L5", "H6", "H4"],
        "range": [
          "#05f2f2",
          "#a7f9f5",
          "#2193b5",
          "#008b8b",
          "#5f9ea0"
        ]
      }
    },
    "tooltip": [
      {"field": "recclass", "type": "nominal", "title": "Meteorite Class"},
      {"field": "count", "type": "quantitative", "title": "Number of Meteorites"}
    ]
  },
  "config": {
    "legend": {
      "labelColor": "#ffffff",  
      "titleColor": "#ffffff"   
    }
  },
  "background": "#0b0c10"
}
